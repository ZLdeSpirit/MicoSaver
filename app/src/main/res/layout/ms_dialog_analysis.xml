<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/ms_dialog_bg_1">

        <Space
            android:id="@+id/space"
            android:layout_width="1px"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/analysisLoadingLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/startLav"
                android:layout_width="21dp"
                android:layout_height="21dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="ms_ana_loading.json"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/analysisLoadingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/ms_parse_video"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/dialogCloseIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ms_ic_dialog_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentNsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/space">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="322dp"
                    android:layout_height="322dp"
                    android:background="@drawable/ms_r_121c2a_c_4">

                    <ImageView
                        android:id="@+id/imageIv"
                        android:layout_width="181dp"
                        android:layout_height="322dp"
                        android:layout_gravity="center"
                        android:background="@color/ms_c_default_image"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ms_ic_play" />

                </FrameLayout>

                <TextView
                    android:id="@+id/saveBtn"
                    android:layout_width="220dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/ms_btn_type_2"
                    android:gravity="center"
                    android:text="@string/ms_save"
                    android:textColor="@color/ms_c_031c30"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="1px"
                    android:layout_height="12dp" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/errorLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/dialogCloseIv">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ms_ic_ana_error" />

            <TextView
                android:id="@+id/errorDescTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginHorizontal="60dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/retryBtn"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/ms_retry"
                android:textColor="@color/ms_c_031c30"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/ms_btn_type_2"
                />

            <Space
                android:layout_width="1px"
                android:layout_height="152dp"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/nativeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>